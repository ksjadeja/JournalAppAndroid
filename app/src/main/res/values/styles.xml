<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="feedbox_data_cardview" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/feedbox_data_rounded_cut</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="feedbox_header_cardview" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/feedbox_header_rounded_cut</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="account_data_cardview" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/account_data_rounded_cut</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="aacountbox_left_cardview_component" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/aacountbox_single_cardview_component</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="expensebox_header_cardview_component" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/expensebox_header_rounded_cut</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="account_input_data_label_cards" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/account_input_data_label_rounded_cut</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="account_input_data_input_cards" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/account_input_data_input_rounded_cut</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="mail_input_card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/mail_input_rounded_cut</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="account_input_desc_data_card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/account_input_desc_data_rounded_cut</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="account_delete_card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/account_delete_rounded_cut</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="mail_delete_card" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/mail_delete_rounded_cut</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="account_main_card_left" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/account_main_card_left_cut</item>
        <item name="cardElevation">10dp</item>
    </style>
    
    <style name="right_20_rounded_view" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/right_20_rounded_cut</item>
    </style>

    <style name="left_20_rounded_view" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/left_20_rounded_cut</item>
    </style>

    <style name="fab_material" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint" tools:targetApi="lollipop">#FA8764</item>
        <item name="borderWidth">3dp</item>
        <item name="backgroundTint">#2F4ADF</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>
    
    <style name="feedbox_data_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="feedbox_header_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="account_data_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="aacountbox_single_cardview_component" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="expensebox_header_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="account_input_data_label_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="account_input_data_input_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="mail_input_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="account_input_desc_data_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="account_delete_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="mail_delete_rounded_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="account_main_card_left_cut" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="right_20_rounded_cut">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="left_20_rounded_cut">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="Theme.Custom" parent="AppTheme">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="Theme.AppCompat">
        <item name="android:focusedMonthDateColor">#FA8764</item>
        <item name="android:weekDayTextAppearance">@color/colorPrimary</item>
        <item name="android:dateTextAppearance">@color/black</item>
    </style>

    <style name="calendarview_custom_text_style" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#1E1D1D</item>
        <item name="android:colorBackground">#BFBFBF</item>
        <item name="android:colorActivatedHighlight">#FA8764</item>
        <item name="android:focusedMonthDateColor">#FA8764</item>
        <item name="android:weekDayTextAppearance">@color/colorPrimary</item>
        <item name="android:dateTextAppearance">@color/black</item>
    </style>

    </resources>
