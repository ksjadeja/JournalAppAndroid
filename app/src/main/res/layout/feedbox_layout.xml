<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_height="150dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:minHeight="150dp"
    android:id="@+id/card_view"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/entry_box_header_shape"
            android:id="@+id/header">

            <TextView
                android:id="@+id/dateField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="10dp"
                android:text="12/12/2020"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="14dp"
                app:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/timeField"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dateField"
                android:text="12:30:24 pm"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="14dp"
                app:fontFamily="sans-serif-black" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dataField"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/header"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/entry_box_data_text_shape"
            android:freezesText="false"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp"
            android:text="Card content that is taller than the maximum card height is truncated and does not scroll, but can be displayed by expanding the height of a card. A card can expand beyond the maximum height of the screen, in which case the card scrolls within the screen."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14dp"
            android:textStyle="italic"
            app:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            android:maxLines="5"/>

    </RelativeLayout>





